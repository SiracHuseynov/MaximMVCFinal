@using Maxim.Core.Models
@model Worker

<div class="container">
    <div class="row">
        <div class="col-12">
            <form method="post" asp-action="Create" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="exampleInputEmail1">FullName</label>
                    <input asp-for="FullName" class="form-control" id="exampleInputEmail1" placeholder="FullName">
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail2">Specialty</label>
                    <input asp-for="Specialty" class="form-control" id="exampleInputEmail2" placeholder="Specialty">
                    <span asp-validation-for="Specialty" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Image</label>
                    <input asp-for="ImageFile" class="form-control" id="exampleInputEmail3">
                    <span asp-validation-for="ImageFile" class="text-danger"></span>
                </div>



                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
</div>

